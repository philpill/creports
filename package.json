{
  "name": "creports",
  "description": "Graphical visualisation of conflicts reported around the world",
  "version": "0.0.1",
  "private": true,
  "ref": [
    "https://github.com/substack/node-browserify#browser-field",
    "https://github.com/thlorenz/browserify-shim#multi-shim-example-including-dependencies"
  ],
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.min.js",
    "topojson": "./bower_components/topojson/topojson.js",
    "d3": "./bower_components/d3/d3.min.js",
    "datamaps": "./bower_components/datamaps/dist/datamaps.all.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "d3": "d3",
    "topojson": "topojson",
    "datamaps": {
      "depends": [
        "d3",
        "topojson"
      ]
    }
  },
  "aliasify": {
    "aliases": {
      "underscore": "lodash"
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "aliasify"
    ]
  },
  "dependencies": {
    "aliasify": "^1.7.2",
    "bower": "*",
    "browserify": "^10.0.0",
    "browserify-shim": "*",
    "cheerio": "*",
    "express": "*",
    "gulp": "*",
    "gulp-batch": "*",
    "gulp-concat": "*",
    "gulp-sass": "*",
    "gulp-uglify": "*",
    "gulp-watch": "*",
    "jade": "*",
    "lodash": "^3.10.0",
    "mongojs": "*",
    "q": "^1.1.2",
    "request": "*",
    "sequelize": "*",
    "vinyl-buffer": "*",
    "vinyl-source-stream": "*"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "mocha": "^2.2.5"
  },
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha"
  }
}
